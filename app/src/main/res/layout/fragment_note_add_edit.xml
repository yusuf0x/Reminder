<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.note_add_edit.NoteAddEditFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnGoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_rounded_gray_secondary"
            android:contentDescription="Go Back"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_arrow_back" />

        <ImageView
            android:id="@+id/btnSaveNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/background_rounded_gray_secondary"
            android:contentDescription="Add Note"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_done" />


    </FrameLayout>

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="title"
        android:minHeight="48dp"
        style="@style/TitleTextStyling"/>

    <EditText
        android:id="@+id/edContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="20sp"
        android:hint="Enter Description"
        android:minHeight="48dp"
        style="@style/ContentTextStyling" />

</LinearLayout>